{
  "name": "credit-card-validator",
  "version": "1.0.0",
  "description": "Виджет для валидации номеров банковских карт",
  "scripts": {
    "start": "webpack serve --mode development --open",
    "dev": "webpack --mode development && webpack serve --mode development --open",
    "build": "webpack --mode production",
    "test": "jest tests/unit",
    "test:coverage": "jest tests/unit --coverage",
    "test:watch": "jest tests/unit --watch",
    "e2e": "jest tests/e2e --detectOpenHandles --forceExit",
    "test:all": "npm test && npm run e2e",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.2.1",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.11.0",
    "html-webpack-plugin": "^5.6.5",
    "jest": "^29.7.0",
    "jest-puppeteer": "^9.0.2",
    "puppeteer": "^22.15.0",
    "style-loader": "^3.3.4",
    "webpack": "^5.104.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.2"
  }
}
